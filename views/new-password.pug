include includes/header.pug

block content
  link(rel="stylesheet" href="/stylesheets/reg.css")
  body(class="home-body")
    div(class="main pt-4")
      div(class="container")
        div(class="nav")
          a(href="/" class="nav-logo") Launch
        div(class="row justify-content-center")
          div(class="col-md-7 mt-4")
            div(class="box shadow-lg")
              h5(class="text-center font-italic mb-5") Set new password
              form(method="POST")
                if error 
                  p(class='feedback-error') #{error}
                input(type="password" class="launch-form" placeholder="New Password" id="password" name="password" required)
                p(class="password-feedback")
                input(type="password" class="launch-form" placeholder="Confirm Password" id="cPassword" name="cPassword" required)
                p(class="cPassword-feedback")
                div(class="text-center mt-2")   
                  p
                    button(type="submit" class="btn btn-custom mt-2" id="submit") Change
                  i(class="on-submit")
    script(src="/javascripts/reset.js" type="module")
    include includes/footer.pug
